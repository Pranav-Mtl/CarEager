<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:background="@drawable/referral_popup_bg"
        >
        <TextView
            android:id="@+id/popup_title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:padding="20dp"
            android:background="@color/redColor"
            android:textColor="@color/whiteColor"
            android:textStyle="bold"
            android:textSize="@dimen/popup_text_Size"
            />


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginTop="30dp"
            android:paddingBottom="10dp"

            >
            <Button
                android:id="@+id/popup_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/customized_button"
                android:textColor="@color/whiteColor"
                android:textAllCaps="true"
                android:text="Capture Image"
                android:textSize="@dimen/popup_button_text_Size"
                android:padding="10dp"
                android:minHeight="@dimen/popup_button_min_height"

                />

            <Button
                android:id="@+id/popup_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/customized_button"
                android:textColor="@color/whiteColor"
                android:textAllCaps="true"
                android:textSize="@dimen/popup_button_text_Size"
                android:minHeight="@dimen/popup_button_min_height"
                android:padding="10dp"
                android:text="Upload Image"
                />
        </LinearLayout>


    </LinearLayout>
</LinearLayout>
