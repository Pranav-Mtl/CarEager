<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context="com.careager.SearchFragment">

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:gravity="center_horizontal"
       android:layout_marginLeft="25dp"
       android:layout_marginRight="25dp"
       android:layout_marginTop="35dp"
       android:orientation="vertical"
       >

       <EditText
           android:id="@+id/nearby_location"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:hint="Enter your location"
           android:paddingLeft="5dp"
           android:visibility="gone"

           />

       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="OR"
           android:visibility="gone"
           android:layout_marginTop="20dp"
           />

       <Button
           android:id="@+id/nearby_current_location"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:background="@drawable/customized_button"
           android:text="Search Nearby car businesses"
           android:textColor="@color/buttonTextColor"
           android:layout_marginTop="40dp"
           android:minHeight="@dimen/button_min_height"
           />


      <!-- <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="Alternatively enter your location"
           android:layout_marginTop="20dp"
           />-->

       <Button
           android:id="@+id/nearby_search"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:background="@drawable/customized_button"
           android:text="Search"
           android:textColor="@color/buttonTextColor"
           android:layout_marginTop="20dp"
           android:minHeight="@dimen/button_min_height"
           android:visibility="gone"
           />


   </LinearLayout>

</FrameLayout>
