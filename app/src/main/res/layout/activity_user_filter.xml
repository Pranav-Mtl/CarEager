<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.careager.UserFilter">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        app:theme="@style/Toolbar_Theme"
        android:elevation="4dp"
        android:background="@color/toolbarBG"
        android:minHeight="?attr/actionBarSize">

        <Button
            android:id="@+id/filter_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Filter"
            android:drawableLeft="@drawable/ic_filter_cross"
            android:drawablePadding="5dp"
            android:textColor="@color/toolbarTextColor"
            android:textSize="@dimen/toolbarTextSize"
            android:background="@android:color/transparent"
            />

    </android.support.v7.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_below="@id/toolbar"
        android:layout_marginBottom="40dp"
        android:layout_height="match_parent">
<LinearLayout
        android:layout_below="@id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:layout_marginRight="20dp"
        >



        <RadioGroup
            android:layout_width="fill_parent"
            android:orientation="horizontal"
            android:padding="5dp"
            android:layout_marginTop="5dp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Car Type"
                android:textStyle="bold"
                />
            <RadioButton
                android:id="@+id/filter_new_car"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New"
                android:button="@null"
                android:drawablePadding="5dp"
                android:layout_marginLeft="20dp"
                android:textColor="@color/blackColor"
                android:drawableLeft="@drawable/dealer_category_checkbox"
                />
            <RadioButton
                android:id="@+id/filter_old_car"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Old"
                android:layout_marginLeft="20dp"
                android:drawablePadding="5dp"
                android:textColor="@color/blackColor"
                android:button="@null"
                android:drawableLeft="@drawable/dealer_category_checkbox"
                />
        </RadioGroup>

       <!-- <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Brand/Make"
        android:layout_marginTop="10dp"
            android:textStyle="bold"
        />-->
        <Spinner
            android:id="@+id/filter_brand"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@drawable/ic_spinner_bg"
            ></Spinner>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Price"
            android:layout_marginTop="15dp"
            android:textStyle="bold"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="5dp"
            android:gravity="center_vertical"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/minValue"
                    android:layout_width="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_gravity="center_vertical"
                    android:layout_height="wrap_content"
                    android:text="1"
                    />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="L"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    >
                <TextView
                    android:id="@+id/maxValue"
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="7dp"
                    android:layout_gravity="center_vertical"
                    android:layout_height="wrap_content"

                    android:gravity="end"
                    android:text="150" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="L"
                        />
                </LinearLayout>
            </RelativeLayout>


            <LinearLayout
                android:id="@+id/layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                />

        </LinearLayout>


       <!-- <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Model"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            />-->
        <Spinner
            android:id="@+id/filter_model"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@drawable/ic_spinner_bg"
            ></Spinner>

       <!-- <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fuel Type"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            />-->
        <Spinner
            android:id="@+id/filter_fuel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@drawable/ic_spinner_bg"
            ></Spinner>
        <!--<TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Color"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            />-->
        <Spinner
            android:id="@+id/filter_color"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@drawable/ic_spinner_bg"
            ></Spinner>

       <!-- <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Car Type"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            />-->
        <Spinner
            android:id="@+id/filter_vehicle_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="30dp"
            android:background="@drawable/ic_spinner_bg"
            ></Spinner>
    </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/filter_Apply"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/customized_flat_button"
        android:text="Apply"
        android:layout_alignParentBottom="true"
        android:textColor="@color/buttonTextColor"
        />

</RelativeLayout>
