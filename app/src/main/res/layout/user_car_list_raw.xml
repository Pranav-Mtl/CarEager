<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="8dp"

    card_view:cardCornerRadius="4dp">
    <RelativeLayout
        android:id="@+id/rl_sale_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/ll_mail"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/image_sales"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:scaleType="centerCrop"

                />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <TextView
                    android:id="@+id/sales_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/blackColor"
                    android:text=""
                    android:paddingLeft="5dp"
                    android:textStyle="bold"
                    android:textSize="@dimen/smallTextSize"
                    />

                <TextView
                    android:id="@+id/sales_maker"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/redColor"
                    android:text=""
                    android:layout_alignParentRight="true"
                    android:textSize="@dimen/smallTextSize"
                    />
            </RelativeLayout>
            <TextView
                android:id="@+id/sales_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/blackColor"
                android:text=""
                android:padding="5dp"
                android:textSize="@dimen/smallTextSize"
                />

        </LinearLayout>
        <TextView
            android:id="@+id/sales_year"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/whiteColor"
            android:padding="5dp"
            android:background="@color/blackColor"
            android:text=""
            />

        <TextView
            android:id="@+id/sales_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/whiteColor"
            android:layout_alignParentRight="true"
            android:padding="5dp"
            android:background="@color/redColor"
            android:text=""
            />
