<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.careager.Settings">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        app:theme="@style/Toolbar_Theme"
        android:elevation="8dp"
        android:background="@color/toolbarBG"

        android:minHeight="?attr/actionBarSize">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_logo_header"
            android:gravity="center"
            android:layout_gravity="center"
            />

    </android.support.v7.widget.Toolbar>
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_marginBottom="50dp"
        android:layout_below="@id/toolbar"
        android:layout_height="fill_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
            <LinearLayout
                android:layout_width="fill_parent"
                android:background="@color/redColor"
                android:layout_height="50dp">
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Basic Information"
                    android:layout_gravity="center"
                    android:textColor="@color/whiteColor"
                    android:layout_marginLeft="10dp"

                    />
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="fill_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_marginLeft="10dp"
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="30dp">
                    <ImageView
                        android:id="@+id/profile_img"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:background="@drawable/loop_profile"
                        />
                    <EditText
                        android:id="@+id/userName"
                        android:layout_toRightOf="@id/profile_img"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="10dp"
                        android:layout_marginRight="40dp"
                        android:background="@android:color/transparent"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center_vertical"

                        android:textColor="@color/textColor"

                        />
                    <ImageButton
                        android:id="@+id/nameBtn"
                        android:layout_alignParentRight="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:layout_centerVertical="true"
                        android:background="@drawable/loop_pen_selector"
                        />
                </RelativeLayout>
                <LinearLayout
                    android:layout_marginTop="5dp"
                    android:layout_width="fill_parent"
                    android:background="#d4d8d9"
                    android:layout_height="1dp">

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="fill_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_marginLeft="10dp"
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="30dp">
                    <ImageView
                        android:id="@+id/profile_img1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:background="@drawable/loop_message"
                        />
                    <EditText
                        android:id="@+id/userEmail"
                        android:layout_toRightOf="@id/profile_img1"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="10dp"
                        android:layout_marginRight="40dp"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center_vertical"
                        android:background="@android:color/transparent"
                        android:editable="false"
                        android:textColor="@color/textColor"

                        />

                    />
                    <ImageView
                        android:id="@+id/numberBtn"
                        android:layout_alignParentRight="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:layout_centerVertical="true"
                        android:visibility="gone"
                        android:background="@drawable/loop_pen_selector"
                        />

                </RelativeLayout>
                <LinearLayout
                    android:layout_marginTop="5dp"
                    android:layout_width="fill_parent"
                    android:background="#d4d8d9"
                    android:layout_height="1dp">

                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="fill_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_marginLeft="10dp"
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="30dp">
                    <ImageView
                        android:id="@+id/profile_img2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:background="@drawable/loop_phone"
                        />
                    <EditText
                        android:id="@+id/userMobile"
                        android:layout_toRightOf="@id/profile_img2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="10dp"

                        android:layout_centerVertical="true"
                        android:layout_gravity="center_vertical"
                        android:background="@android:color/transparent"
                        android:textColor="@color/textColor"
                        android:editable="false"/>


                </RelativeLayout>
                <LinearLayout
                    android:layout_marginTop="5dp"
                    android:layout_width="fill_parent"
                    android:background="#d4d8d9"
                    android:layout_height="1dp">

                </LinearLayout>

            </LinearLayout>

            <!-- hh-->

            <LinearLayout
                android:id="@+id/ll_address"
                android:layout_marginTop="10dp"
                android:layout_width="fill_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_marginLeft="10dp"
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="30dp">
                    <ImageView
                        android:id="@+id/profile_img7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:background="@drawable/loop_profile"
                        />
                    <EditText
                        android:id="@+id/useraddress"
                        android:layout_toRightOf="@id/profile_img7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="10dp"

                        android:layout_centerVertical="true"
                        android:layout_gravity="center_vertical"
                        android:background="@android:color/transparent"
                        android:textColor="@color/textColor"
                        />
                    <ImageButton
                        android:id="@+id/addressBtn"
                        android:layout_alignParentRight="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:layout_centerVertical="true"
                        android:background="@drawable/loop_pen_selector"
                        />


                </RelativeLayout>


            </LinearLayout>
            <LinearLayout
                android:id="@+id/arrow_btn1"
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:background="@color/redColor"
                android:layout_height="50dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Change Password"
                    android:layout_gravity="center"

                    android:layout_marginLeft="10dp"
                    android:textColor="@color/whiteColor"

                    />
                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent">
                    <ImageButton
                        android:id="@+id/arrow_btn"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="10dp"
                        android:layout_centerInParent="true"
                        android:layout_width="wrap_content"
                        android:background="@drawable/arrow_btn"

                        android:layout_height="wrap_content"

                        />
                </RelativeLayout>

            </LinearLayout>
            <LinearLayout
                android:visibility="gone"
                android:id="@+id/pass_layout"
                android:layout_marginTop="10dp"
                android:layout_width="fill_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">
                    <RelativeLayout
                        android:layout_marginLeft="10dp"
                        android:orientation="horizontal"
                        android:layout_width="fill_parent"
                        android:layout_height="30dp">
                        <ImageView
                            android:id="@+id/profile_img3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:background="@drawable/loop_lock"
                            />
                        <EditText
                            android:id="@+id/userOldPadd"
                            android:layout_toRightOf="@id/profile_img3"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:hint="Old Password"
                            android:paddingLeft="10dp"
                            android:layout_centerVertical="true"
                            android:layout_gravity="center_vertical"
                            android:background="@android:color/transparent"
                            android:singleLine="true"
                            android:inputType="textPassword"

                            android:textColor="@color/textColor"

                            />

                    </RelativeLayout>
                    <LinearLayout
                        android:layout_marginTop="5dp"
                        android:layout_width="fill_parent"
                        android:background="#d4d8d9"
                        android:layout_height="1dp">

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="fill_parent"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">
                    <RelativeLayout
                        android:layout_marginLeft="10dp"
                        android:orientation="horizontal"
                        android:layout_width="fill_parent"
                        android:layout_height="30dp">
                        <ImageView
                            android:id="@+id/profile_img4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:background="@drawable/loop_lock"
                            />
                        <EditText
                            android:id="@+id/userNewPass"
                            android:layout_toRightOf="@id/profile_img4"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:hint="New Password"
                            android:paddingLeft="10dp"

                            android:layout_centerVertical="true"
                            android:layout_gravity="center_vertical"
                            android:background="@android:color/transparent"
                            android:singleLine="true"
                            android:inputType="textPassword"
                            android:textColor="@color/textColor"

                            />

                    </RelativeLayout>
                    <LinearLayout
                        android:layout_marginTop="5dp"
                        android:layout_width="fill_parent"
                        android:background="#d4d8d9"
                        android:layout_height="1dp">

                    </LinearLayout>

                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="fill_parent"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">
                    <RelativeLayout
                        android:layout_marginLeft="10dp"
                        android:orientation="horizontal"
                        android:layout_width="fill_parent"
                        android:layout_height="30dp">
                        <ImageView
                            android:id="@+id/profile_img5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:background="@drawable/loop_lock"
                            />
                        <EditText
                            android:id="@+id/userConfirmPass"
                            android:layout_toRightOf="@id/profile_img5"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:hint="Confirm Password"
                            android:paddingLeft="10dp"

                            android:layout_centerVertical="true"
                            android:layout_gravity="center_vertical"
                            android:background="@android:color/transparent"
                            android:singleLine="true"
                            android:inputType="textPassword"
                            android:textColor="@color/textColor"

                            />

                    </RelativeLayout>

                </LinearLayout>
            </LinearLayout>





        </LinearLayout>
    </ScrollView>
    <Button
        android:id="@+id/saveBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/customized_flat_button"
        android:text="Save"
        android:visibility="gone"
        android:textColor="@color/buttonTextColor"
        />
</RelativeLayout>
