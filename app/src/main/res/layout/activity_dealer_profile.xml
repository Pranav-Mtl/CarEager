<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/profile_main"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.careager.Profile">
        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="40dp"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:background="@drawable/ic_profile_default"
            >
            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                app:theme="@style/Toolbar_Theme"
                android:elevation="4dp"
                android:background="@android:color/transparent"
                android:minHeight="?attr/actionBarSize">

                <TextView
                    android:id="@+id/dealer_profile_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:textStyle="bold"
                    android:textAllCaps="true"
                    android:layout_gravity="center"
                    android:drawablePadding="5dp"
                    android:textColor="@color/toolbarTextColor"
                    android:textSize="@dimen/toolbarTextSize"
                    />

                <LinearLayout
                    android:id="@+id/profile_menu"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="right"
                    android:padding="10dp"
                    >
                    <ImageView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ic_settings"

                        />
                </LinearLayout>


            </android.support.v7.widget.Toolbar>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                >

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/profile_user_image"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_alignParentLeft="true"
                    />

                <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                    android:gravity="center"
                    android:padding="5dp"
                >

            <TextView
                android:id="@+id/dealer_profile_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:textColor="@color/whiteColor"
                />
            <TextView
                android:id="@+id/dealer_profile_rating_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textColor="@color/whiteColor"
                />
            <RatingBar
                android:id="@+id/dealer_profile_rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:numStars="5"
                android:stepSize=".5"
                android:maxWidth="110dp"
                android:layout_marginTop="5dp"
                android:maxHeight="50dp"
                android:minHeight="20dp"
                android:progressDrawable="@drawable/ratingbar_customized"
                android:isIndicator="false"/>
            <TextView
                android:id="@+id/dealer_profile_rating_text_careager"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginTop="5dp"
                android:textColor="@color/whiteColor"
                />
            <RatingBar
                android:id="@+id/dealer_profile_rating_careager"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:numStars="5"
                android:stepSize=".5"
                android:maxWidth="110dp"
                android:layout_marginTop="5dp"
                android:maxHeight="50dp"
                android:minHeight="20dp"
                android:progressDrawable="@drawable/ratingbar_customized"
                android:isIndicator="false"/>
            </LinearLayout>
            </LinearLayout>
        </LinearLayout>
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                >
        <LinearLayout
            android:id="@+id/profile_ll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"


            android:orientation="vertical"

            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Overview"
                    android:layout_marginTop="10dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:textStyle="bold"
                    />
                <TextView
                    android:id="@+id/dealer_profile_overview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"

                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"

                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Reviews"
                    android:layout_marginTop="10dp"
                    android:paddingLeft="10dp"
                    android:textStyle="bold"
                    />

                <LinearLayout
                    android:id="@+id/profile_ll_review_one"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:paddingBottom="5dp"
                    android:paddingLeft="5dp"
                    android:visibility="gone"
                    >
                    <ImageView
                        android:id="@+id/dealer_profile_review_image_one"
                        android:layout_width="70dp"
                        android:layout_height="70dp" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        >
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:id="@+id/dealer_profile_review_name_one"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Name"
                                android:textSize="@dimen/small_text_Size"
                                />
                            <TextView
                                android:id="@+id/dealer_profile_review_date_one"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:text="21/10/2015"
                                android:textSize="@dimen/small_text_Size"
                                />

                        </RelativeLayout>
                        <RatingBar
                            android:id="@+id/dealer_profile_review_rating_one"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:numStars="5"
                            android:stepSize="1"
                            android:maxWidth="110dp"
                            android:layout_marginTop="5dp"
                            android:layout_gravity="center_vertical"
                            android:maxHeight="100dp"
                            android:minHeight="20dp"
                            android:progressDrawable="@drawable/ratingbar_customized"
                            android:isIndicator="false"/>
                        <TextView
                            android:id="@+id/dealer_profile_review_comment_one"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="comment:"
                            android:textSize="@dimen/small_text_Size"
                            />
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:paddingBottom="5dp"
                    android:paddingLeft="5dp"
                    android:id="@+id/profile_ll_review_two"
                    android:visibility="gone"
                    >
                    <ImageView
                        android:id="@+id/dealer_profile_review_image_two"
                        android:layout_width="70dp"
                        android:layout_height="70dp" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        >
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:id="@+id/dealer_profile_review_name_two"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Name"
                                android:textSize="@dimen/small_text_Size"
                                />
                            <TextView
                                android:id="@+id/dealer_profile_review_date_two"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:text="21/10/2015"
                                android:textSize="@dimen/small_text_Size"
                                />

                        </RelativeLayout>
                        <RatingBar
                            android:id="@+id/dealer_profile_review_rating_two"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:numStars="5"
                            android:stepSize="1"
                            android:maxWidth="110dp"
                            android:layout_marginTop="5dp"
                            android:layout_gravity="center_vertical"
                            android:maxHeight="100dp"
                            android:minHeight="20dp"
                            android:progressDrawable="@drawable/ratingbar_customized"
                            android:isIndicator="false"/>
                        <TextView
                            android:id="@+id/dealer_profile_review_comment_two"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="comment:"
                            android:textSize="@dimen/small_text_Size"
                            />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
                   </LinearLayout>
            </ScrollView>
    </LinearLayout>
    <Button
        android:id="@+id/profile_chat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/customized_flat_button"
        android:minHeight="@dimen/button_min_height"
        android:text="Start Chat"
        android:textAllCaps="false"
        android:visibility="gone"
        android:textColor="@color/whiteColor"
        />
    <android.support.v7.widget.RecyclerView
        android:id="@+id/category_list"
        android:layout_alignParentRight="true"
        android:layout_width="170dp"
        android:layout_marginTop="50dp"
        android:visibility="gone"
        android:background="@drawable/bg_rounded_shape"
        android:layout_height="200dp"/>

</RelativeLayout>
