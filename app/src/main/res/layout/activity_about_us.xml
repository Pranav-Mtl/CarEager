<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.careager.AboutUs">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        app:theme="@style/Toolbar_Theme"
        android:elevation="4dp"
        android:background="@color/toolbarBG"

        android:minHeight="?attr/actionBarSize">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="About us"
            android:gravity="center"
            android:layout_gravity="center"
            android:textColor="@color/whiteColor"
            android:textSize="@dimen/toolbarTextSize"
            />

    </android.support.v7.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_below="@id/toolbar"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"

        android:gravity="center_horizontal"
        android:padding="15dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            >

            <ImageView
                android:id="@+id/about_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                />

            <TextView
                android:id="@+id/about_version"
                android:layout_width="wrap_content"
                android:paddingLeft="10dp"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                />
        </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CarEager is world's first automotive platform dedicated solely to connect users, experts and businesses"
        android:layout_marginTop="20dp"

        android:textSize="@dimen/smallTextSize"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Using CarEager App or website, people can search, view, compare - Cars, Services or Products offered by their local Car dealers, Service Stations, Insurance offices, Mechanic shops, Tyre Dealers, Spare Parts Sellers, Battery Sellers and all other businesses related to cars. People can also directly Call, Chat, Request Quote and Schedule Services. "
        android:layout_marginTop="20dp"

        android:textSize="@dimen/smallTextSize"

        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="We have intelligently utilized our 24 years’ experience in automotive industry for the development of CarEager portal. "
        android:layout_marginTop="20dp"

        android:textSize="@dimen/smallTextSize"
        />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Copyright © 2016. Victorious Managers' Group (Private) Limited."
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        android:textSize="@dimen/smallTextSize"
        />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/aboutus_tandc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="- Terms &amp; Conditions"
                android:layout_marginTop="20dp"

                android:textSize="@dimen/smallTextSize"
                android:textColorLink="@color/redColor"
                android:linksClickable="true"
                android:autoLink="all"
                android:padding="5dp"
                />

            <TextView
                android:id="@+id/aboutus_privacy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="- Privacy Policy"
                android:layout_marginTop="20dp"
                android:layout_alignParentRight="true"
                android:textSize="@dimen/smallTextSize"
                android:padding="5dp"
                android:textColorLink="@color/redColor"
                android:linksClickable="true"
                android:autoLink="all"
                />
   </RelativeLayout>

    </LinearLayout>

    </ScrollView>
</RelativeLayout>
