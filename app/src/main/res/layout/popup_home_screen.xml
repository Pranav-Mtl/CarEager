<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:background="@drawable/referral_popup_bg"
        >
        <TextView
            android:id="@+id/popup_title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:padding="10dp"
            android:background="@color/redColor"
            android:textColor="@color/whiteColor"
            android:textStyle="bold"
            android:textSize="@dimen/popup_text_Size"
            />

        <TextView
            android:id="@+id/popup_message"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="5dp"
            android:textSize="@dimen/popup_text_Size"
            android:layout_marginTop="10dp"
            android:singleLine="false"


            />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="5dp"
            android:paddingBottom="10dp"

            >

            <Button
                android:id="@+id/popup_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/customized_button"
                android:textColor="@color/whiteColor"
                android:textAllCaps="true"
                android:textSize="@dimen/popup_button_text_Size"
                android:minHeight="@dimen/popup_button_min_height"
                android:padding="5dp"

                />
        </LinearLayout>

        <TextView
            android:id="@+id/popup_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/textColor"
            android:layout_marginTop="5dp"
            android:gravity="center"
            />

        <Button
            android:id="@+id/popup_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/customized_button"
            android:textColor="@color/whiteColor"
            android:textAllCaps="true"
            android:layout_marginTop="5dp"
            android:textSize="@dimen/popup_button_text_Size"
            android:padding="5dp"
            android:minHeight="@dimen/popup_button_min_height"
            />

        <TextView
            android:id="@+id/popup_msg_small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#fe1119"
            android:textSize="@dimen/small_text_Size"
            android:gravity="center"
            />

    </LinearLayout>
</LinearLayout>
