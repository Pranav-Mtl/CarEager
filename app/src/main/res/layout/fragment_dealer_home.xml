<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context="com.careager.HomeFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/layout_pager"
        android:layout_width="fill_parent"
        android:layout_height="120dp"
        >
        <com.careager.Container.PagerContainer
            android:id="@+id/pager_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v4.view.ViewPager
                android:id="@+id/pager"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center" />
        </com.careager.Container.PagerContainer>


    </LinearLayout>
    <LinearLayout
        android:layout_below="@id/layout_pager"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">

        <!-- layout for car info -->
        <LinearLayout
            android:id="@+id/ll_careager"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_marginBottom="50dp"
            android:visibility="gone"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:gravity="center_horizontal"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/radio_default"
                    />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/radio_checked"
                    android:layout_marginLeft="5dp"
                    />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/radio_default"
                    android:layout_marginLeft="5dp"
                    />
            </LinearLayout>
            <Spinner
                android:id="@+id/caringo_brand"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@drawable/ic_spinner_bg"
                ></Spinner>
            <Spinner
                android:id="@+id/carinfo_model"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@drawable/ic_spinner_bg"
                ></Spinner>
            <Button
                android:id="@+id/btn_search_carinfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Search"
                android:padding="5dp"
                android:layout_marginTop="20dp"
                android:textColor="@color/buttonTextColor"
                android:background="@drawable/customized_button"
                android:minHeight="@dimen/button_min_height"
                />
           <!-- <GridView
                android:id="@+id/gridview_logo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:columnWidth="150dp"
                android:numColumns="2"
                android:verticalSpacing="10dp"
                android:background="@color/whiteColor"
                android:paddingTop="0dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:horizontalSpacing="30dp"
                android:stretchMode="columnWidth"
                android:gravity="center"
                />-->
        </LinearLayout>

        <!-- layout for new/old car -->
        <LinearLayout
            android:id="@+id/ll_new_old_car"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:gravity="center_horizontal"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:visibility="gone"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/radio_default"
                    />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/radio_default"
                    android:layout_marginLeft="5dp"
                    />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/radio_checked"
                    android:layout_marginLeft="5dp"
                    />
            </LinearLayout>

        <AutoCompleteTextView
            android:id="@+id/home_search_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Location"
            android:drawablePadding="5dp"
            android:paddingLeft="5dp"
            android:layout_marginTop="20dp"
            android:drawableLeft="@drawable/ic_side_location"
            />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="20dp"
                android:gravity="center_vertical"
                >



                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/minValue"
                        android:layout_width="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_height="wrap_content"
                        android:text="1"

                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="5dp"
                        android:text="L"
                        />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/maxValue"
                        android:layout_width="wrap_content"
                        android:layout_marginLeft="7dp"
                        android:layout_gravity="center_vertical"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        android:text="150" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="L"
                        android:paddingLeft="5dp"
                        />
                    </LinearLayout>
                </RelativeLayout>


                <LinearLayout
                    android:id="@+id/layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    />

            </LinearLayout>


            <Button
                android:id="@+id/home_btn_car"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Search"
                android:padding="5dp"
                android:layout_marginTop="20dp"
                android:textColor="@color/buttonTextColor"
                android:background="@drawable/customized_button"
                android:minHeight="@dimen/button_min_height"
                />
        </LinearLayout>

        <!-- layout for service -->
        <LinearLayout
            android:id="@+id/ll_service"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"

            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/radio_checked"
                    />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/radio_default"
                    android:layout_marginLeft="5dp"
                    />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/radio_default"
                    android:layout_marginLeft="5dp"
                    />
            </LinearLayout>
            <AutoCompleteTextView
                android:id="@+id/tv_search_service"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Location"
                android:drawablePadding="5dp"
                android:paddingLeft="5dp"
                android:layout_marginTop="20dp"
                android:drawableLeft="@drawable/ic_side_location"
                />

        <Spinner
            android:id="@+id/spinner_category_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_spinner_bg"
            android:layout_marginTop="20dp"
            ></Spinner>

            <Button
                android:id="@+id/btn_search_service"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Search"
                android:padding="5dp"
                android:layout_marginTop="20dp"
                android:textColor="@color/buttonTextColor"
                android:background="@drawable/customized_button"
                android:minHeight="@dimen/button_min_height"
                />
        </LinearLayout>
    </LinearLayout>

    </RelativeLayout>
</FrameLayout>
