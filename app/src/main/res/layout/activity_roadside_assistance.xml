<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.careager.RoadsideAssistance">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        app:theme="@style/Toolbar_Theme"
        android:elevation="4dp"
        android:background="@color/toolbarBG"
        android:minHeight="?attr/actionBarSize">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_logo_header"
            android:layout_gravity="center"
            />


    </android.support.v7.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar"
        >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:orientation="vertical"
        >

        <EditText
            android:id="@+id/roadside_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/grayColor"
            android:hint="Your name"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            />

        <EditText
            android:id="@+id/roadside_message"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@color/grayColor"
            android:hint="Type message here"
            android:layout_marginTop="10dp"
            android:padding="5dp"
            />

        <Button
            android:id="@+id/roadside_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/customized_button"
            android:text="send My Location"
            android:textColor="@color/buttonTextColor"
            android:minHeight="@dimen/button_min_height"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="italic"
            android:layout_marginTop="10dp"
            android:text="*To be used in case of emergency only!
MISUSE of this service could permanently BLACKLIST your device/account and you will not be able to use any of our services in future. "
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:text="HOW IT WORKS?"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Our emergency roadside assistance team never sleeps. In case you are stuck anywhere on road due to your vehicle breakdown, we’ll assist you.
We’ll try to locate nearest service provider and inform them to help you immediately.
This service works without internet connectivity too. "
            />

    </LinearLayout>

    </ScrollView>
</RelativeLayout>
