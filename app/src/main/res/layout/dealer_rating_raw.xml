<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/profile_ll_review_one"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        >
        <ImageView
            android:id="@+id/review_image_one"
            android:layout_width="70dp"
            android:layout_height="70dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/review_name_one"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Name"
                    android:textColor="@color/textColor"
                    android:textSize="@dimen/small_text_Size"
                    />
                <TextView
                    android:id="@+id/review_date_one"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="21/10/2015"
                    android:textSize="@dimen/small_text_Size"
                    android:textColor="@color/redColor"
                    />

            </RelativeLayout>
            <RatingBar
                android:id="@+id/review_rating_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:numStars="5"
                android:stepSize="1"
                android:maxWidth="110dp"
                android:layout_marginTop="5dp"
                android:layout_gravity="center_vertical"
                android:maxHeight="100dp"
                android:minHeight="20dp"
                android:progressDrawable="@drawable/ratingbar_customized"
                android:isIndicator="false"/>
            <TextView
                android:id="@+id/review_comment_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="comment:"
                android:textSize="@dimen/small_text_Size"
                android:textColor="@color/textColor"
                />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
