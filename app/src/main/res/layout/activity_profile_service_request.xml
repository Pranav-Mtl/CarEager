<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.careager.ProfileServiceRequest">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        app:theme="@style/Toolbar_Theme"
        android:elevation="8dp"
        android:background="@color/toolbarBG"

        android:minHeight="?attr/actionBarSize">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_logo_header"
            android:gravity="center"
            android:layout_gravity="center"
            />

    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar"
        android:orientation="vertical"
        >

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:orientation="vertical"

                >


                <EditText
                    android:id="@+id/request_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:hint="Your name"
                    android:imeOptions="actionNext"
                    />

                <EditText
                    android:id="@+id/request_mobile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:hint="Contact no."
                    android:inputType="number"
                    android:imeOptions="actionNext"
                    />

                <EditText
                    android:id="@+id/request_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:hint="Email-id"
                    android:inputType="textEmailAddress"
                    android:imeOptions="actionNext"
                    />

                <EditText
                    android:id="@+id/request_registration"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:hint="Vehicle no."
                    android:inputType="textEmailAddress"
                    android:imeOptions="actionNext"
                    />

                <Button
                    android:id="@+id/request_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_marginTop="20dp"
                    android:textColor="@color/textColor"
                    android:hint="Select Date"
                    android:background="@color/grayColor"
                    android:paddingLeft="5dp"
                    android:visibility="gone"
                    />



                <EditText
                    android:id="@+id/request_message"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_marginTop="20dp"
                    android:padding="5dp"
                    android:hint="Add some description"
                    android:background="@color/grayColor"
                    android:imeOptions="actionDone"
                    />

                <Button
                    android:id="@+id/request_done"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:background="@drawable/customized_button"
                    android:text="Send Request"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center"
                    android:padding="5dp"
                    android:textColor="@color/whiteColor"
                    />

            </LinearLayout>
        </ScrollView>

    </LinearLayout>

</RelativeLayout>
